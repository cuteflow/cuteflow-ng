extends ../layout

block menu
    include ../partials/menu

block container
    h1= t("user.header")

    div.pull-right
        a(href="/user/create").btn.btn-link.btn-sm
            i.glyphicon.glyphicon-plus
            | &nbsp;
            span= t("user.index.create")

    table.table.table-striped.table-bordered.table-condensed
        thead
            tr
                th= t("user.table.username")
                th= t("user.table.firstname")
                th= t("user.table.lastname")
                th &nbsp;
        tbody
            each user, i in users
                tr
                    td= user.username
                    td= user.profile.firstName
                    td= user.profile.lastName
                    td
                        a(href="user/delete?id="+user.id)
                            i.glyphicon.glyphicon-trash
                        | &nbsp;
                        a(href="user/edit?id="+user.id)
                            i.glyphicon.glyphicon-pencil

    != createPager(pages, page)